{
  "extends": "next/core-web-vitals",
  "rules": {
    "eqeqeq": ["error", "smart"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/stylistic"
      ],
      "rules": {
        "@typescript-eslint/consistent-type-definitions": ["error", "type"]
      }
    }
  ]
}
